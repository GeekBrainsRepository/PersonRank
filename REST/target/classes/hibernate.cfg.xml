<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://192.168.0.101:3306/personrank?autoReconnect=true</property>
    <!--<property name="connection.url">jdbc:mysql://localhost:3306/personrank?autoReconnect=true</property>-->
    <property name="connection.username">personrank</property>
    <property name="connection.password">personrank</property>
    <property name="show_sql">true</property>

     <mapping class="ru.infologic.model.KeywordsEntity" />
     <mapping class="ru.infologic.model.PagesEntity" />
     <mapping class="ru.infologic.model.PersonPageRankEntity" />
     <mapping class="ru.infologic.model.PersonsEntity" />
     <mapping class="ru.infologic.model.SitesEntity" />
      <mapping class="ru.infologic.model.UsersEntity" />

  </session-factory>
</hibernate-configuration>