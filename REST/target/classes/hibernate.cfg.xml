<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- Database connection settings -->
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/personrank?autoReconnect=true</property>
    <property name="connection.username">root</property>
    <property name="connection.password">some***</property>
    <property name="show_sql">true</property>

     <mapping class="infologic.model.KeywordsEntity" />
     <mapping class="infologic.model.PagesEntity" />
     <mapping class="infologic.model.PersonPageRankEntity" />
     <mapping class="infologic.model.PersonsEntity" />
     <mapping class="infologic.model.SitesEntity" />

  </session-factory>
</hibernate-configuration>